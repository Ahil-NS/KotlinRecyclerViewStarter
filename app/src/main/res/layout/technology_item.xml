<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="200dp"
>

    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/view"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <TextView
            tools:text="Android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/technologyName" android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/view" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/technologyImage"
            android:layout_marginStart="18dp" android:layout_marginLeft="18dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/view" android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" tools:srcCompat="@drawable/android_img"
            android:id="@+id/technologyImage"
            android:scaleType="centerCrop"
            android:contentDescription="@string/technology_image"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>